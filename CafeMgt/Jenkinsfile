pipeline {
    agent any

    tools {
        jdk 'jdk11' // Make sure this JDK is configured in Jenkins
        ant 'Ant'   // Configure Apache Ant in Jenkins Global Tools
    }

    environment {
        IMAGE_NAME = 'cafemgt-app'
        TAG = 'latest'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build WAR') {
            steps {
                sh 'ant clean'
                sh 'ant'
            }
        }

        stage('Docker Build') {
            steps {
                sh 'docker build -t $IMAGE_NAME:$TAG .'
            }
        }

        stage('Run Container') {
            steps {
                sh 'docker run -d -p 8080:8080 --name cafemgt-container $IMAGE_NAME:$TAG'
            }
        }
    }

    post {
        always {
            echo 'Pipeline complete.'
        }
    }
}
