pipeline {
    agent any

    environment {
        // Set any global environment variables here
        MAVEN_OPTS = "-Dmaven.test.failure.ignore=false"
    }

    tools {
        maven 'Maven 3.8.5' // Replace with the name of the Maven tool in Jenkins global config
        jdk 'Java 21'       // Replace with the name of your JDK installation
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }

        // Optional deployment stage
        /*
        stage('Deploy') {
            steps {
                // Example: copy WAR to Tomcat webapps folder
                sh 'cp target/your-app.war /path/to/tomcat/webapps/'
            }
        }
        */
    }

    post {
        success {
            echo 'Build and tests succeeded!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
