pipeline {
    agent any

    environment {
        MAVEN_OPTS = "-Dmaven.test.failure.ignore=false"
    }

    tools {
        maven 'Maven 3.9.9'   // Replace with the name you used in Global Tool Configuration
        jdk 'Java 21'         // Replace with the name you used for JDK in Global Tool Configuration
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm  // This will use the Git tool configured in Jenkins (no need for explicit Git tool here)
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }
    }

    post {
        success {
            echo 'Build and tests succeeded!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
